<h1>Use this form to edit existing product information:</h1>
  <br><br>

<% if @product.errors.present? %>
  <ul>
    <%= @product.errors.full_messages.each do |err| %>
     <li><%= err %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [:admin, @product] do |f| %>
  <%= f.label "Enter the name of the product to update:" %>
  <%= f.text_field :name %><br><br>
  <%= f.label "Revise Price:" %>
  <%= f.text_field :price %><br><br>
  <%= f.label "Update the url for the photo of the product:" %>
  <%= f.text_field :image_url %><br><br>
  <%= f.submit %>
<% end %>
